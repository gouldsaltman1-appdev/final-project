<h1>
  Equipment #<%= @equipment.id %> details
</h1>

<a href="/equipment/<%= @equipment.id %>/edit">
  Edit equipment
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @equipment.title %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @equipment.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%= @equipment.image %>
  </dd>

  <dt>
    Owner
  </dt>
